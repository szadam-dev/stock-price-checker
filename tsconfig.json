{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "baseUrl": ".",
        "paths": {
            "@*": ["src/*"]
        },
        "moduleResolution": "Node",
        "outDir": "dist",
        "importsNotUsedAsValues": "remove",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strictNullChecks": true,
        "types": ["vitest/globals"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
